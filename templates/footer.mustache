{{!
    Page footer.
}}
<!-- fordson_fel/footer -->
<footer id="page-footer" class="py-1 text-light">
    <div class="container">

        {{#hascoursefooter}}
        <div id="course-footer">{{{output.course_footer}}}</div>
        {{/hascoursefooter}}

        {{#hasfooterelements}}
        <div class="container">
            <div class="row">
                <div class="col-md-4 left-footer">
                {{{leftfooter}}}
                </div>
                <div class="col-md-4 mid-footer">
                {{{midfooter}}}
                </div>
                <div class="col-md-4 right-footer">
                {{{rightfooter}}}
                </div>
            </div>
        </div>
        {{/hasfooterelements}}

        {{#hasfootnote}}
        <div class="footnote">{{{footnote}}}</div>
        {{/hasfootnote}}

        {{#hasdoclink}}
        <div class="doclink">
            <p class="helplink">{{{page_doc_link}}}</p>
        </div>
        {{/hasdoclink}}

        {{{ output.login_info }}}

        <nav class="nav navbar-nav d-md-none">
            {{# output.custom_menu_flat }}
                <ul class="list-unstyled pt-3">
                    {{> theme_boost/custom_menu_footer }}
                </ul>
            {{/ output.custom_menu_flat }}
        </nav>

        {{{ output.standard_footer_html }}}
        {{{ output.standard_end_of_body_html }}}

    </div>
</footer>
<!-- /fordson_fel/footer -->
