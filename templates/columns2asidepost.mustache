{{!
    @template theme_boost/columns2

    Admin time setting template.

    Boost 2 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
<!-- fordson_fel:columns2asidepost -->
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    {{>theme_fordson_fel/navbar}}

    {{#output.headerbkglocation}}
        {{{ output.headerimage }}}
    {{/output.headerbkglocation}}

    <div id="page" class="container-fluid">

        <div id="learningcontent">

            {{{ output.teacherdash }}}
            <!-- O(full_header) -->
            {{{ output.full_header }}}
            <!-- /O(full_header) -->
            {{>theme_fordson_fel/blockspanelslider}}

            <div id="page-content" class="row">
                <div id="region-main-box" class="col-12">
                    {{#hasregionmainsettingsmenu}}
                    <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                        <div> {{{ output.region_main_settings_menu }}} </div>
                    </div>
                    {{/hasregionmainsettingsmenu}}
                    <section id="region-main" {{#hasblocks}}class="has-blocks mb-3"{{/hasblocks}}>
                        <div class="card">
                            <div class="card-body">
                                {{#hasregionmainsettingsmenu}}
                                    <div class="region_main_settings_menu_proxy"></div>
                                {{/hasregionmainsettingsmenu}}
                                <!-- O(course_content_header) -->
                                {{{ output.course_content_header }}}
                                <!-- /O(course_content_header) -->
                                <!-- O(main_content) -->
                                {{{ output.main_content }}}
                                <!-- /O(main_content) -->
                                <!-- O(course_content_footer) -->
                                {{{ output.course_content_footer }}}
                                <!-- O(course_content_footer) -->
                            </div>
                        </div>
                    </section>
                    {{#hasblocks}}
                    <section data-region="blocks-column" class="hidden-print">
                        {{{ sidepreblocks }}}
                    </section>
                    {{/hasblocks}}
                </div>
            </div>
            {{{ output.activity_navigation }}}
        </div>
    </div>

    {{{ output.standard_after_main_region_html }}}

    {{#hasfhsdrawer}}
    {{> theme_boost/nav-drawer }}
    {{/hasfhsdrawer}}

    {{#hasspdrawer}}
    {{> theme_fordson_fel/side-post-drawer }}
    {{/hasspdrawer}}

</div>

<a href="#pagebottom" id="go-to-bottom" class="btn btn-primary btn-lg show" role="button" title="{{#str}}gotobottom, theme_fordson_fel{{/str}}"><i class="fa fa-arrow-circle-down" aria-hidden="true"></i></a>
<a href="#" id="back-to-top" class="btn btn-primary btn-lg" role="button" title="{{#str}}backtotop, theme_fordson_fel{{/str}}"><i class="fa fa-arrow-circle-up" aria-hidden="true"></i></a>

{{> theme_fordson_fel/footer }}
<a name="pagebottom"></a>
</body>
</html>
{{#js}}
require(['theme_boost/loader']);
require(['jquery','theme_boost/tooltip'], function($){$('[data-tooltip="tooltip"]').tooltip()});
{{#hasfhsdrawer}}
require(['theme_boost/drawer'], function(mod) {
    mod.init();
});
{{/hasfhsdrawer}}
{{#hasspdrawer}}
require(['theme_fordson_fel/spdrawer'], function(mod) {
    mod.init();
});
{{/hasspdrawer}}
{{/js}}
